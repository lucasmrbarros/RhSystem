@{
    ViewData["Title"] = "Candidato";
}
<div class="container-fluid">
    <div class="text-center">
        <h1 class="display-4">Cadastro de Candidato</h1>
    </div>
</div>

<div class="container p-5 my-5">
    <div class="span4"></div>
    <div class="span4">
        <form action="/" class="was-validated" id="postcand">
            <div class="form-group">
                <label for="nome">Nome:</label>
                <input type="text" class="form-control" id="nome" placeholder="Digite o nome o nome" name="nome" required>
                <div class="valid-feedback">Ok</div>
                <div class="invalid-feedback">Preencha o campo</div>
            </div>
            <div class="form-group">
                <label for="Email">E-mail:</label>
                <input type="text" class="form-control" id="email" placeholder="Digite o e-mail" name="email" required>
                <div class="valid-feedback">Ok</div>
                <div class="invalid-feedback">Preencha o campo</div>
            </div>
            <div class="form-group">
                <label for="Telefone">Telefone:</label>
                <input type="text" class="form-control" id="telefone" placeholder="Digite o Telefone" name="telefone" required>
                <div class="valid-feedback">Ok</div>
                <div class="invalid-feedback">Preencha o campo</div>
            </div>
            <div class="form-group">
                <label for="sel1">Selecione o a vaga:</label>
                <select class="form-control" id="Vaga-dropdown" name="vagaid">
                </select>
            <div />

                <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Enviar</button>
        </form>
        <div class="col">
        </div>
        <div class="span4"></div>
    </div>

    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal body -->
                <div class="modal-body">
                    Novo candidato cadastrado
                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
                </div>

            </div>
        </div>
    </div>

    <div class="container p-5 my-5 ">
        <div class="row">
            <div class="col">
                <a class="btn btn-success" asp-area="" asp-controller="Home" asp-action="Entrevista">Continuar</a>
            </div>
        </div>
    </div>
